{
  "manifest_version": 2,

  "name": "Web Panel",
  "description": "Navigate to websites in the sidebar.",
  "version": "1.2",
  "background": {"scripts": ["background.js"]},
  "developer": { "name": "Gustav Ekner" },
  "icons": { "16": "icons/icon16.png",
             "48": "icons/icon48.png",
             "128": "icons/icon128.png" },
  "minimum_opera_version": "30",

  "permissions": [
    "storage",
    "bookmarks",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "sidebar_action": {
    "default_icon": "icons/web.png",
    "default_title" : "Web Panel",
    "default_panel": "panel.html"
  },
  "content_scripts": [
		{
			"matches": ["<all_urls>"],
			"css": ["mystyles.css"],
			"js": ["myscript.js"],
      "all_frames": true
		}
	]
}
